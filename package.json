{
  "name": "@miscmft/root",
  "version": "0.1.0",
  "private": true,
  "description": "MFT component libraries monorepo",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.10.0",
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
